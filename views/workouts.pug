mixin ex-card-li
    div(class="card exercise-card" id!=attributes.id style!=attributes.style)
        div(class="card-body")
            h5(class="card-title") Name
            p(class="card-text") Description
            div(class="rating-static")
                span(class="far fa-star star1")
                span(class="far fa-star star2")
                span(class="far fa-star star3")
                span(class="far fa-star star4")
                span(class="far fa-star star5")

mixin ex-single-li
    li(class="list-group-item ex-single-li" id!=attributes.id style!=attributes.style)
        h6 Name &times 0 reps

mixin ex-block-li
    li(class="list-group-item ex-block-li" id!=attributes.id style!=attributes.style)
        h6 Title &times 0 reps
        ul(class="list-group")

mixin rest-li
    li(class="list-group-item rest-li" id!=attributes.id style!=attributes.style)
        h6 Rest for 0 seconds

mixin workout-card
    div(class="card workout-card" id!=attributes.id style!=attributes.style)
        div(class="card-body")
            span(class="btn remove-btn" data-toggle="modal" data-target="#removeBlockModal")
                i(class="fas fa-times")

            h5(class="card-title") Title
            p(class="card-text") Description

            p
                button(type="button" class="btn btn-light wkCollapseButton" data-toggle="collapse" data-target="#workoutCollapse-slug") Workout
                    i(class="fa fa-angle-down")

            div(class="workoutDisplay collapse" id="workoutCollapse-slug")
                ul(class="list-group list-group-flush")

            p
                button(type="button" class="btn btn-light exCollapseButton" data-toggle="collapse" data-target="#exerciseCollapse-slug") Exercises
                    i(class="fa fa-angle-down")

            div(class="exerciseDisplay collapse" id="exerciseCollapse-slug")

            div(class="ratings")
                div(class="rating-static")
                    span(class="far fa-star star1")
                    span(class="far fa-star star2")
                    span(class="far fa-star star3")
                    span(class="far fa-star star4")
                    span(class="far fa-star star5")

                i(class="fas fa-heart fav-icon")
                span(class="badge badge-pill badge-light fav-counter") 0


div(class="col-lg-6 main-col")
    h2(class="mainTitle") Create Workout
    div(class="content-col")
        div(class="workout-creator")
            label Workout Creator
            div(class="board")

            +add-block

        br

        form(action="/workout" method="POST" id="addWorkoutForm" class="needs-validation custom-form" novalidate)
            div(class="form-group")
                label(for="wkTitleInput") Title
                input(type="text" class="form-control" id="wkTitleInput" name="wkTitle" placeholder="Enter title" required)
                div(class="invalid-feedback") Please give a title.

            div(class="form-group")
                label(for="wkDescriptionInput") Description
                textarea(class="form-control" id="wkDescriptionInput" name="wkDescription" rows="3" placeholder="Give any extra info on how to perform the workout (Optional)")

            div(class="alert alert-success" style="display:none")
            div(class="alert alert-danger" style="display:none")

            button(type="submit" class="btn btn-lg btn-block custom-submit") Submit

div(class="col-lg-6 main-col")
    h2(class="mainTitle") Search Workouts

    div(class="content-col" id="workoutResults")
        h2(id="noWorkouts" style="display:none") No workouts
